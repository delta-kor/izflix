include head.pug
include image.pug

html
  +head('Playlist - IZFLIX', 'https://izflix.net/playlist')
  body.hydrated.snapped
    #root
      h1 Playlist
      include nav.pug
      each playlist in playlists
        article
          a(href= 'https://izflix.net/playlist/' + playlist.id)
          h4= playlist.title
          p= playlist.description
          +image(playlist.thumbnail)
    include footer.pug